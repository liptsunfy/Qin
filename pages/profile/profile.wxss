/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  margin: 12px;
  padding: 20px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.avatar-section {
  position: relative;
  margin-right: 20px;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 3px solid #f0f0f0;
}

.avatar-hint {
  position: absolute;
  bottom: -20px;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 12px;
  color: #999;
}

.user-info {
  flex: 1;
}

.nickname-section {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.nickname {
  font-size: 20px;
  font-weight: 600;
  margin-right: 12px;
  color: #333;
}

.edit-btn {
  font-size: 12px;
  color: #666;
  padding: 4px 12px;
  border: 1px solid #ddd;
  border-radius: 12px;
  background: #f8f8f8;
}

.signature {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  font-style: italic;
  line-height: 1.4;
}

.join-date {
  font-size: 12px;
  color: #999;
}

/* 统计数据 */
.stats-section {
  display: flex;
  justify-content: space-around;
  text-align: center;
  margin: 12px;
  padding: 20px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.stat-item {
  flex: 1;
  padding: 0 10px;
}

.stat-value {
  display: block;
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 6px;
  color: #333;
}

.stat-label {
  font-size: 13px;
  color: #999;
}

/* 月度日历 */
.month-calendar {
  margin: 12px;
  padding: 20px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.month-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.month-nav {
  font-size: 14px;
  color: #666;
  padding: 6px 12px;
  border-radius: 6px;
  background: #f8f8f8;
}

.month-nav:active {
  background: #f0f0f0;
}

/* 星期标题 */
.weekdays {
  display: flex;
  margin-bottom: 10px;
}

.weekdays text {
  flex: 1;
  text-align: center;
  font-size: 13px;
  color: #999;
  font-weight: 500;
  padding: 5px 0;
}

/* 日历网格 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  border-top: 1px solid #f0f0f0;
  border-left: 1px solid #f0f0f0;
  margin-left: -1px;
  margin-top: -1px;
}

.date-cell {
  width: calc(100% / 7);
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-right: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
  box-sizing: border-box;
}

.date-cell.empty {
  background: #fafafa;
}

.date-cell.today {
  background: #f0f0f0;
}

.date-cell.has-record {
  background: #333;
}

.date-cell-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.date-number {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.date-cell.today .date-number {
  color: #333;
  font-weight: 600;
}

.date-cell.has-record .date-number {
  color: white;
  font-weight: 600;
}

.date-cell.empty .date-number {
  color: transparent;
}

.record-indicator {
  width: 5px;
  height: 5px;
  background: white;
  border-radius: 50%;
  margin-top: 2px;
}

/* 日历图例 */
.calendar-legend {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: #666;
}

.legend-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border: 1px solid #ddd;
}

.legend-dot.today {
  background: #f0f0f0;
  border-color: #ccc;
}

.legend-dot.has-record {
  background: #333;
  border-color: #333;
}

/* 点选日期记录展示 */
.selected-date-records {
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px dashed #e6e6e6;
}

.selected-date-header {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4px;
  margin-bottom: 12px;
}

.selected-date-title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
}

.selected-date-summary {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 2px;
}

.selected-date-sub {
  display: block;
  font-size: 12px;
  color: #666;
}

.selected-date-empty {
  padding: 10px 0;
  font-size: 12px;
  color: #888;
}

.selected-date-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.selected-date-item {
  padding: 12px;
  background: #f8f6f3;
  border: 1px solid #eee5dc;
  border-radius: 12px;
}

.selected-date-item-main {
  display: flex;
  gap: 6px;
  align-items: center;
  margin-bottom: 6px;
}

.selected-date-item-index {
  font-size: 12px;
  color: #888;
}

.selected-date-item-song {
  font-size: 14px;
  color: #2f2a25;
  font-weight: 500;
}

.selected-date-item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.selected-date-item-duration {
  font-size: 12px;
  color: #6b5f53;
  background: #fff;
  border-radius: 999px;
  padding: 2px 8px;
}

.selected-date-item-repeat {
  font-size: 12px;
  color: #6b5f53;
  background: #fff;
  border-radius: 999px;
  padding: 2px 8px;
}

.selected-date-item-checkin {
  font-size: 12px;
  color: #6b5f53;
  background: #fff;
  border-radius: 999px;
  padding: 2px 8px;
}

.selected-date-item-notes {
  display: block;
  margin-top: 6px;
  font-size: 12px;
  color: #777;
  line-height: 1.4;
}

/* 月度统计 */
.month-stats {
  margin: 12px;
  padding: 20px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.section-title {
  display: block;
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 20px;
  color: #333;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.month-stat {
  text-align: center;
  flex: 1;
  padding: 0 10px;
}

.month-stat-value {
  display: block;
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 6px;
  color: #333;
}

.month-stat-label {
  font-size: 13px;
  color: #999;
}

/* 练习回顾整合区 */
.practice-hub {
  margin: 12px;
  padding: 20px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.practice-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
}

.practice-item {
  padding: 16px;
  border-radius: 12px;
  background: #fafafa;
  border: 1px solid #f0f0f0;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.practice-item:active {
  background: #f0f0f0;
}

.practice-label {
  font-size: 15px;
  font-weight: 600;
  color: #333;
}

.practice-desc {
  font-size: 12px;
  color: #888;
  line-height: 1.4;
}

/* 功能按钮 */
.action-buttons {
  margin: 12px;
  padding: 16px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.action-buttons .btn {
  margin: 10px 0;
  width: 100%;
  border-radius: 12px;
  font-size: 15px;
  padding: 12px 14px;
  font-weight: 500;
  line-height: 1.2;
}

.action-buttons .btn:last-child {
  margin-bottom: 0;
}

.action-buttons .btn-secondary {
  border: 1px solid #eee;
  background: #fafafa;
}

.action-buttons .btn-secondary[style*="color: #ff4444"] {
  border-color: #ff4444;
  color: #ff4444;
  background: white;
}

/* 模态框内容 */
.modal-title {
  display: block;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 20px;
  text-align: center;
  color: #333;
}

.modal-input {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 12px 16px;
  margin-bottom: 20px;
  width: 100%;
  box-sizing: border-box;
  font-size: 16px;
  min-height: 48px;
  line-height: 24px;
}

.modal-buttons {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}

.modal-buttons .btn {
  flex: 1;
  border-radius: 8px;
  padding: 12px;
  font-size: 16px;
}

/* 分享功能 */
.share-date-picker {
  margin-bottom: 20px;
}

.date-picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}

.date-picker-item:last-child {
  border-bottom: none;
}

.date-picker-item text {
  font-size: 15px;
  color: #666;
}

.date-value {
  padding: 8px 16px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 15px;
  color: #333;
  background: #f8f8f8;
}

.share-stats {
  background: #f8f8f8;
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 20px;
  border: 1px solid #eee;
}

.share-stats text {
  display: block;
  margin-bottom: 8px;
  font-size: 15px;
  color: #666;
  line-height: 1.5;
}

.share-title {
  font-weight: 600;
  margin-bottom: 12px !important;
  color: #333 !important;
  font-size: 16px !important;
}

.share-preview {
  margin-bottom: 20px;
}

.share-textarea {
  width: 100%;
  height: 140px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 12px 16px;
  font-size: 14px;
  margin-top: 12px;
  box-sizing: border-box;
  line-height: 1.5;
  background: #f8f8f8;
  color: #666;
}

/* 图文分享模态框 */
.share-image-modal {
  width: 90%;
  max-width: 700px;
  padding: 25px;
}

.image-preview {
  max-height: 70vh;
  margin-bottom: 15px;
  border-radius: 12px;
  overflow: hidden;
  background: #f8f8f8;
  border: 1px solid #e0e0e0;
  box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.share-preview-image {
  width: 100%;
  display: block;
}

.share-image-actions {
  display: flex;
  gap: 12px;
  margin-bottom: 20px;
}

.share-image-actions .btn {
  flex: 1;
}

/* 新增：曲目统计模态框 */
.song-stats-modal {
  width: 95%;
  max-width: 700px;
  padding: 20px;
}

.song-stats-list {
  width: 100%;
  margin-top: 10px;
}

.empty-songs {
  text-align: center;
  padding: 60px 20px;
  color: #999;
}

.empty-songs text {
  display: block;
  margin-bottom: 10px;
}

.empty-hint {
  font-size: 14px;
  color: #ccc;
  line-height: 1.5;
}

.song-stat-item {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #f0f0f0;
  background: white;
  border-radius: 8px;
  margin-bottom: 8px;
  padding: 16px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.song-stat-item:last-child {
  border-bottom: none;
}

.song-stat-item:active {
  background: #f8f8f8;
}

.song-rank {
  margin-right: 16px;
  min-width: 40px;
}

.rank-number {
  font-size: 24px;
  font-weight: 700;
  color: #8B7355;
  text-align: center;
}

.song-info {
  flex: 1;
  min-width: 0;
}

.song-name {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
  word-break: break-all;
}

.song-details {
  display: flex;
  gap: 12px;
  margin-bottom: 6px;
  flex-wrap: wrap;
}

.song-count {
  font-size: 14px;
  color: #666;
  padding: 2px 8px;
  background: #f0f0f0;
  border-radius: 12px;
}

.song-duration {
  font-size: 14px;
  color: #666;
  padding: 2px 8px;
  background: #f0f0f0;
  border-radius: 12px;
}

.song-percentage {
  font-size: 14px;
  color: #8B7355;
  font-weight: 600;
  padding: 2px 8px;
  background: #f5f1eb;
  border-radius: 12px;
}

.song-date-range {
  font-size: 12px;
  color: #999;
}

.song-actions {
  margin-left: 12px;
}

.view-detail {
  font-size: 12px;
  color: #666;
  padding: 4px 12px;
  border: 1px solid #ddd;
  border-radius: 12px;
  background: #f8f8f8;
}

/* 赞赏功能 */
.donate-text {
  display: block;
  text-align: center;
  margin-bottom: 20px;
  color: #666;
  line-height: 1.6;
  font-size: 15px;
  padding: 0 10px;
}

.qr-code-container {
  text-align: center;
  margin-bottom: 20px;
  padding: 20px;
  background: #f8f8f8;
  border-radius: 12px;
  border: 1px solid #eee;
}

.qr-code {
  width: 240px;
  height: 240px;
  margin-bottom: 12px;
  border-radius: 8px;
  background: white;
  padding: 10px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.qr-hint {
  font-size: 13px;
  color: #999;
  display: block;
}

/* 记录列表 */
.records-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid #eee;
}

.close-btn {
  font-size: 24px;
  padding: 4px 12px;
  color: #999;
  font-weight: 300;
}

.records-list {
  width: 100%;
  max-height: 60vh;
  overflow-y: auto;
}

.empty-records {
  text-align: center;
  padding: 60px 20px;
  color: #999;
  font-size: 16px;
}

.record-item {
  padding: 16px 0;
  border-bottom: 1px solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-date {
  display: block;
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 6px;
  color: #333;
}

.record-song {
  display: block;
  font-size: 15px;
  color: #666;
  margin-bottom: 4px;
  line-height: 1.4;
}

.record-duration {
  display: block;
  font-size: 14px;
  color: #999;
  margin-bottom: 8px;
}

.record-notes {
  display: block;
  font-size: 14px;
  color: #666;
  background: #f8f8f8;
  padding: 10px 12px;
  border-radius: 6px;
  margin-top: 6px;
  line-height: 1.5;
  border-left: 3px solid #ddd;
}

/* 模态框样式覆盖 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-mask .modal-content {
  background: white;
  border-radius: 16px;
  padding: 30px 25px;
  width: 85%;
  max-width: 400px;
  max-height: 85vh;
  overflow-y: auto;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .stat-value {
    font-size: 24px;
  }
  
  .month-stat-value {
    font-size: 20px;
  }
  
  .calendar-header {
    margin-bottom: 15px;
  }
  
  .month-title {
    font-size: 16px;
  }
  
  .month-nav {
    font-size: 13px;
    padding: 5px 10px;
  }
  
  .date-cell {
    height: 42px;
  }
  
  .date-number {
    font-size: 14px;
  }
  
  .share-image-actions {
    flex-direction: column;
  }
  
  .song-details {
    gap: 8px;
  }

  .practice-grid {
    grid-template-columns: 1fr;
  }
}

/* 动画效果 */
.date-cell {
  transition: background-color 0.2s ease;
}

.date-cell:active {
  opacity: 0.7;
}

.btn:active {
  transform: scale(0.98);
}

.song-stat-item {
  transition: all 0.2s ease;
}

/* 滚动条样式 */
scroll-view::-webkit-scrollbar {
  width: 4px;
}

scroll-view::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 2px;
}

scroll-view::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 2px;
}

scroll-view::-webkit-scrollbar-thumb:hover {
  background: #999;
}
