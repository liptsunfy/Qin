.page {
  padding: 32rpx 24rpx 80rpx;
  background: #f6f7fb;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(92, 108, 255, 0.08);
  margin-bottom: 24rpx;
}

.record-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.record-meta {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #7a7a7a;
}

.waveform {
  margin-top: 20rpx;
}

.waveform-label {
  font-size: 22rpx;
  color: #8a8a8a;
  margin-bottom: 12rpx;
}

.waveform-bars {
  display: flex;
  align-items: flex-end;
  gap: 6rpx;
  height: 120rpx;
  padding: 12rpx;
  border-radius: 16rpx;
  background: #f1f3ff;
}

.wave-bar {
  width: 8rpx;
  border-radius: 8rpx;
  background: linear-gradient(180deg, #5c6cff, #9aa2ff);
}

.player {
  margin-top: 20rpx;
}

.time-row {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #7a7a7a;
  margin-bottom: 6rpx;
}

.progress {
  margin: 0;
}

.player-actions {
  margin-top: 12rpx;
  display: flex;
  gap: 16rpx;
}

.secondary-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f1f3ff;
  color: #5c6cff;
}

.action-card .section-title {
  font-size: 26rpx;
  color: #4b4b4b;
  margin-bottom: 16rpx;
}

.action-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-btn {
  height: 72rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f6f7fb;
  color: #333333;
}

.action-btn.danger {
  background: #ffecec;
  color: #ff6b6b;
}
