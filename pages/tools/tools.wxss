.tools-container {
  padding-bottom: 20px;
  background-color: #f8f8f8;
}

/* 顶部标题栏 */
.tools-header {
  margin: 12px;
  padding: 16px 18px;
  display: flex;
  align-items: center;
}

/* 顶部留白承载位：留白但不空白 */
.header-slot {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.header-primary {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.55);
  line-height: 1.3;
  letter-spacing: 1px;
}

.header-secondary {
  margin-top: 6px;
  font-size: 12px;
  color: rgba(0, 0, 0, 0.32);
  line-height: 1.2;
}

/* 分类导航 */
.category-nav {
  white-space: nowrap;
  padding: 0 12px;
  margin-bottom: 12px;
}

.category-item {
  display: inline-block;
  padding: 8px 16px;
  margin-right: 8px;
  background: white;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
  border: 1px solid #ddd;
}

.category-item.active {
  background: #333;
  color: white;
  border-color: #333;
}

/* 分类标题 */
.category-section {
  margin: 0 12px 20px 12px;
}

.category-title {
  display: block;
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
  padding-left: 8px;
  border-left: 4px solid #8B7355;
}

/* 工具网格 */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

/* 工具卡片 */
.tool-card {
  background: white;
  border-radius: 12px;
  padding: 16px;
  position: relative;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transition: transform 0.2s;
}

.tool-card:active {
  transform: scale(0.98);
}

.tool-card.disabled {
  opacity: 0.6;
}

.tool-card.coming-soon {
  background: linear-gradient(135deg, #f5f5f5, #e8e8e8);
}

.tool-icon {
  font-size: 32px;
  margin-bottom: 12px;
  text-align: center;
}

.tool-info {
  text-align: center;
  min-height: 60px;
}

.tool-name {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.tool-desc {
  display: block;
  font-size: 12px;
  color: #666;
  line-height: 1.4;
}

.tool-status {
  position: absolute;
  top: 8px;
  right: 8px;
}

.status-tag {
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 10px;
  background: #f0f0f0;
  color: #999;
}

.status-tag.enabled {
  background: #e8f5e8;
  color: #4CAF50;
}

.status-tag.coming-soon {
  background: #fff3e0;
  color: #FF9800;
}

.status-tag.disabled {
  background: #f5f5f5;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60px 20px;
}

.empty-icon {
  display: block;
  font-size: 48px;
  margin-bottom: 16px;
  color: #ccc;
}

.empty-title {
  display: block;
  font-size: 18px;
  color: #666;
  margin-bottom: 8px;
}

.empty-desc {
  display: block;
  font-size: 14px;
  color: #999;
}

/* 底部信息 */
.tools-footer {
  margin: 20px 12px;
  padding: 20px;
  text-align: center;
  background: #f8f8f8;
}

.footer-text {
  display: block;
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
  font-weight: 500;
}

.footer-hint {
  display: block;
  font-size: 14px;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .tools-grid {
    grid-template-columns: 1fr;
  }
  
  .stat-value {
    font-size: 20px;
  }
}