.ywt-page{padding:16rpx;background:#f6f7fb;min-height:100vh;box-sizing:border-box;display:flex;flex-direction:column;gap:12rpx}
.card{background:#fff;border-radius:24rpx;padding:18rpx;box-shadow:0 10rpx 24rpx rgba(18,23,40,0.08)}
.ywt-header{display:flex;flex-direction:column;gap:12rpx}
.header-row{display:flex;justify-content:space-between;gap:12rpx;align-items:center;flex-wrap:wrap}
.mode-btn,.tuning-btn{padding:12rpx 22rpx;border-radius:18rpx;background:#1d1f25;color:#fff;font-size:24rpx;font-weight:600}
.tuning-picker{display:flex}
.header-hint{font-size:22rpx;color:#7b8394}
.ywt-content{padding:12rpx;flex:1;display:flex;align-items:center;justify-content:center}
.ywt-placeholder{width:100%;height:70vh;border-radius:16rpx;background:linear-gradient(180deg,#f7f8fb 0%,#eef1f6 100%);display:flex;flex-direction:column;align-items:center;justify-content:center;gap:12rpx;text-align:center}
.placeholder-title{font-size:32rpx;font-weight:600;color:#1d1f25}
.placeholder-subtitle{font-size:24rpx;color:#5b6270}
.placeholder-note{font-size:20rpx;color:#9aa2b1}
