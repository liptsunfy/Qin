.page {
  padding: 32rpx 24rpx 80rpx;
  background: #f6f7fb;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #7a7a7a;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(92, 108, 255, 0.08);
  margin-bottom: 24rpx;
}

.mode-card {
  border: 1rpx solid rgba(92, 108, 255, 0.12);
  background: linear-gradient(135deg, #ffffff 0%, #f6f7ff 100%);
}

.mode-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.mode-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2a2a2a;
}

.mode-tag {
  font-size: 20rpx;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(92, 108, 255, 0.12);
  color: #5c6cff;
}

.mode-desc {
  font-size: 22rpx;
  color: #5c5c5c;
  margin-bottom: 12rpx;
}

.mode-tips {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  font-size: 22rpx;
  color: #7a7a7a;
}

.tip-item {
  line-height: 1.6;
}

.record-card {
  text-align: center;
}

.timer {
  font-size: 64rpx;
  font-weight: 700;
  color: #5c6cff;
}

.status {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

.actions {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.secondary-btn,
.primary-btn {
  min-width: 180rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.secondary-btn {
  background: #f1f3ff;
  color: #5c6cff;
}

.secondary-btn.pause {
  background: #fff4e5;
  color: #ff9f1c;
}

.primary-btn {
  background: linear-gradient(135deg, #5c6cff, #7b7bff);
  color: #ffffff;
}

.list-card .section-title {
  font-size: 26rpx;
  color: #4b4b4b;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-hint {
  font-size: 20rpx;
  color: #9a9a9a;
  background: #f2f3f7;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.empty {
  font-size: 24rpx;
  color: #a0a0a0;
  text-align: center;
  padding: 24rpx 0;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: 0;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.record-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #2a2a2a;
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-meta {
  font-size: 22rpx;
  color: #8a8a8a;
}

.record-arrow {
  font-size: 36rpx;
  color: #c5c5c5;
}
