.page {
  padding: 32rpx 24rpx 80rpx;
  background: #f6f7fb;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #7a7a7a;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(92, 108, 255, 0.08);
  margin-bottom: 24rpx;
}

.bpm-card {
  text-align: center;
}

.bpm-display {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.bpm-value {
  font-size: 72rpx;
  font-weight: 700;
  color: #5c6cff;
}

.bpm-unit {
  font-size: 28rpx;
  color: #5c6cff;
  margin-bottom: 12rpx;
}

.bpm-range {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #a0a0a0;
}

.bpm-controls {
  display: flex;
  flex-wrap: nowrap;
  gap: 12rpx;
  justify-content: center;
  margin: 16rpx 0 8rpx;
}

.bpm-btn {
  height: 64rpx;
  min-width: 80rpx;
  padding: 0 12rpx;
  border-radius: 20rpx;
  background: #f1f3ff;
  color: #4c4c4c;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-title {
  font-size: 26rpx;
  color: #4b4b4b;
  margin-bottom: 20rpx;
}

.beat-options {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.beat-option {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  background: #f1f3ff;
  color: #6c6c6c;
  font-size: 24rpx;
}

.beat-option.active {
  background: #5c6cff;
  color: #ffffff;
  font-weight: 600;
}

.beat-indicator {
  display: flex;
  gap: 14rpx;
  margin-top: 24rpx;
}

.beat-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e0e3ff;
}

.beat-dot.active {
  background: #5c6cff;
  box-shadow: 0 0 12rpx rgba(92, 108, 255, 0.6);
}

.action-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.primary-btn {
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  background: linear-gradient(135deg, #5c6cff, #7b7bff);
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn.stop {
  background: linear-gradient(135deg, #ff6b6b, #ff8f8f);
}

.tap-area {
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  border: 2rpx dashed #d8dbff;
  text-align: center;
}

.tap-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #4c4c4c;
}

.tap-subtitle {
  display: block;
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #9c9c9c;
}
