.container {
  padding-bottom: 20px;
}

/* 状态栏 */
.status-bar {
  margin-top: 10px;
}

.date-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.date-text {
  font-size: 18px;
  font-weight: 600;
}

.continuous-days {
  background: #f0f0f0;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
}

.encourage-section {
  margin-top: 8px;
  padding-top: 8px;
  border-top: 1px solid #eee;
}

.encourage-text {
  font-size: 14px;
  color: #666;
  font-style: italic;
}

/* 今日状态 */
.today-status {
  margin-top: 12px;
}

.status-title {
  font-size: 16px;
  font-weight: 600;
  display: block;
  margin-bottom: 8px;
}

.today-total {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 12px;
  padding: 8px 12px;
  background: #f8f8f8;
  border-radius: 6px;
}

.status-hint {
  color: #999;
  font-size: 14px;
}

/* 今日多条记录 */
.today-records {
  margin-bottom: 16px;
}

.today-record-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}

.today-record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-time {
  display: block;
  font-size: 12px;
  color: #999;
  margin-bottom: 4px;
}

.record-song-row {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 10px;
  margin-bottom: 2px;
}

.record-song-name {
  flex: 1;
  min-width: 0;
  font-size: 14px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-song-duration {
  flex: 0 0 auto;
  font-size: 12px;
  color: #666;
}

.record-repeat-count {
  flex: 0 0 auto;
  font-size: 12px;
  color: #999;
}

.record-notes {
  display: block;
  font-size: 12px;
  color: #666;
  background: #f8f8f8;
  padding: 4px 8px;
  border-radius: 4px;
  margin-top: 4px;
}

.record-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  font-size: 12px;
  color: #ff4444;
  padding: 4px 8px;
  border: 1px solid #ff4444;
  border-radius: 12px;
  background: white;
}

/* 再记一次区域 */
.add-more-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background: #f8f8f8;
  border-radius: 8px;
  margin-top: 12px;
}

.add-more-text {
  font-size: 14px;
  color: #666;
}

/* 表单部分 */
.checkin-form {
  margin-top: 12px;
}

.form-title {
  display: block;
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 16px;
  text-align: center;
}

.form-section {
  margin-bottom: 20px;
}

.section-title {
  display: block;
  margin-bottom: 12px;
  font-size: 16px;
  font-weight: 600;
}

/* 时长按钮 */
.duration-buttons {
  display: flex;
  gap: 8px;
  margin-bottom: 12px;
}

.duration-btn {
  padding: 10px 0;
  border: 1px solid #ddd;
  border-radius: 20px;
  text-align: center;
  font-size: 16px;
  flex: 1;
  min-height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.duration-btn.active {
  background: #333;
  color: white;
  border-color: #333;
}

/* 曲目按钮 */
.song-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 12px;
}

.song-btn {
  padding: 8px 10px;
  border: 1px solid #ddd;
  border-radius: 16px;
  text-align: center;
  font-size: 14px;
  flex: 1 1 calc(33.333% - 8px);
  max-width: calc(33.333% - 8px);
  min-width: 0;
  min-height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song-btn.active {
  background: #333;
  color: white;
  border-color: #333;
}

/* 小屏设备：每行 2 个，避免按钮过窄 */
@media (max-width: 360px) {
  .song-btn {
    flex-basis: calc(50% - 8px);
    max-width: calc(50% - 8px);
  }
}

/* 大屏设备：每行 4 个，减少空白 */
@media (min-width: 500px) {
  .song-btn {
    flex-basis: calc(25% - 8px);
    max-width: calc(25% - 8px);
  }
}

/* 输入框 */
.custom-duration,
.custom-song {
  margin-top: 8px;
}

.custom-duration .input,
.custom-song .input {
  width: 100%;
  box-sizing: border-box;
  min-height: 40px;
  line-height: 24px;
  font-size: 14px;
  padding: 8px 12px;
}

/* 笔记输入 */
.notes-input {
  width: 100%;
  height: 100px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 8px 12px;
  font-size: 14px;
  box-sizing: border-box;
  line-height: 20px;
}

.notes-counter {
  text-align: right;
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

/* 本周日历 */
.week-days {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
}

.day-cell {
  flex: 1;
  text-align: center;
  padding: 8px 4px;
  border-radius: 4px;
  position: relative;
}

.day-cell.today {
  background: #f0f0f0;
}

.day-date {
  display: block;
  font-size: 12px;
  color: #666;
}

.day-weekday {
  display: block;
  font-size: 12px;
  color: #999;
  margin: 4px 0;
}

.day-dot {
  width: 8px;
  height: 8px;
  background: #333;
  border-radius: 50%;
  margin: 4px auto;
}

.day-multiple {
  position: absolute;
  top: 2px;
  right: 2px;
  font-size: 10px;
  color: #8B7355;
  font-weight: bold;
}

.day-duration {
  font-size: 12px;
  color: #333;
}

.day-empty {
  font-size: 12px;
  color: #ccc;
}

/* 提交按钮 */
.btn-primary {
  width: 100%;
  margin: 16px 0 0 0;
  padding: 12px;
  font-size: 16px;
}

.btn-small {
  padding: 6px 12px;
  font-size: 12px;
  border-radius: 16px;
  min-width: 80px;
}

/* 常用曲目区块 */
.song-buttons.frequent { margin-bottom: 10rpx; }
.song-buttons.preset { margin-top: 6rpx; }
