.container{padding:24rpx;}
.card{background:#fff;border-radius:24rpx;padding:28rpx;margin-bottom:22rpx;box-shadow:0 6rpx 18rpx rgba(0,0,0,0.06);}
.tabs{display:flex;gap:16rpx;margin-bottom:18rpx;}
.tab{flex:1;text-align:center;padding:16rpx 0;border-radius:18rpx;background:rgba(0,0,0,0.04);color:rgba(0,0,0,0.6);font-size:28rpx;}
.tab.active{background:rgba(0,0,0,0.08);color:rgba(0,0,0,0.88);font-weight:600;}
.title-row{display:flex;justify-content:space-between;align-items:flex-end;margin-bottom:10rpx;}
.title{font-size:34rpx;color:rgba(0,0,0,0.9);font-weight:600;}
.sub{font-size:24rpx;color:rgba(0,0,0,0.5);}
.kpis{display:flex;flex-wrap:wrap;gap:18rpx;margin-top:10rpx;}
.kpi{flex:1;min-width:200rpx;background:rgba(0,0,0,0.03);border-radius:18rpx;padding:18rpx;}
.kpi .label{font-size:22rpx;color:rgba(0,0,0,0.55);}
.kpi .value{margin-top:6rpx;font-size:34rpx;color:rgba(0,0,0,0.9);font-weight:600;}
.section-title{margin-top:18rpx;margin-bottom:10rpx;font-size:26rpx;color:rgba(0,0,0,0.7);font-weight:600;}
.song-item{display:flex;justify-content:space-between;align-items:center;padding:10rpx 0;border-bottom:1px solid rgba(0,0,0,0.06);}
.song-item:last-child{border-bottom:none;}
.song-name{max-width:68%;font-size:28rpx;color:rgba(0,0,0,0.88);overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.song-meta{font-size:24rpx;color:rgba(0,0,0,0.55);}
.empty{padding:20rpx 0;color:rgba(0,0,0,0.5);font-size:26rpx;}