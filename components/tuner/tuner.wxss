.tuner-container {
  height: 100vh;
  background: #f8f8f8;
}

/* 头部样式 */
.tuner-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  background: white;
  border-bottom: 1px solid #eee;
}

.back-btn {
  font-size: 24px;
  color: #333;
  padding: 8px;
}

.tuner-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 琴弦选择 */
.string-selector {
  background: white;
  padding: 20px 16px;
  margin: 12px;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.selector-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 16px;
  color: #333;
}

.strings-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.string-item {
  flex: 1;
  min-width: 80px;
  padding: 12px 8px;
  border: 1px solid #ddd;
  border-radius: 8px;
  text-align: center;
  background: #f8f8f8;
}

.string-item.active {
  background: #8B7355;
  border-color: #8B7355;
  color: white;
}

.string-name {
  display: block;
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
}

.string-note {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 2px;
}

.string-item.active .string-note {
  color: rgba(255,255,255,0.9);
}

.string-freq {
  display: block;
  font-size: 12px;
  color: #999;
}

.string-item.active .string-freq {
  color: rgba(255,255,255,0.7);
}

/* 调音显示 */
.tuning-display {
  background: white;
  padding: 24px 16px;
  margin: 12px;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  text-align: center;
}

.frequency-display {
  margin-bottom: 24px;
}

.current-note {
  display: block;
  font-size: 48px;
  font-weight: 700;
  color: #333;
  margin-bottom: 8px;
}

.current-freq {
  display: block;
  font-size: 18px;
  color: #666;
}

/* 偏差指示器 */
.deviation-indicator {
  margin: 30px 0;
  padding: 0 20px;
}

.indicator-background {
  position: relative;
  height: 60px;
  background: linear-gradient(to right, #4CAF50, #FFEB3B, #FF5722);
  border-radius: 30px;
  overflow: hidden;
}

.indicator-line {
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 2px;
  background: #333;
  transform: translateX(-1px);
}

.indicator-needle {
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  transition: transform 0.3s ease;
}

.needle-head {
  position: absolute;
  left: -8px;
  top: 0;
  width: 16px;
  height: 60px;
  background: #333;
  border-radius: 8px;
}

.indicator-labels {
  position: absolute;
  bottom: -30px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #666;
  padding: 0 10px;
}

.deviation-text {
  margin-top: 20px;
  font-size: 16px;
  font-weight: 600;
}

.deviation-perfect {
  color: #4CAF50;
}

.deviation-high {
  color: #FF5722;
}

.deviation-low {
  color: #2196F3;
}

/* 控制按钮 */
.tuner-controls {
  padding: 20px 16px;
  margin: 12px;
}

.control-btn {
  width: 100%;
  padding: 16px;
  font-size: 18px;
  font-weight: 600;
  border-radius: 12px;
  border: none;
}

.control-btn.start {
  background: #8B7355;
  color: white;
}

.control-btn.stop {
  background: #ff4444;
  color: white;
}

/* 使用提示 */
.tuner-tips {
  background: white;
  padding: 20px;
  margin: 12px;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
}

.tips-title {
  display: block;
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #333;
}

.tuner-tips text {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  line-height: 1.5;
}